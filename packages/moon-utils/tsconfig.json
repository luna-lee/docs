{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2017",
    "moduleResolution": "node",
    "noImplicitThis": false,
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    // "outDir": "dist",
    "declarationDir": "./dist/types",
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": ".",
    "sourceMap": false,
    "noEmitOnError": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.d.ts",
    "build.config.ts"
  ],
  "exclude": [
    "**/dist",
    "**/node_modules",
    "**/test"
  ]
}